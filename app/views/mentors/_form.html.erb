


<%= simple_form_for(@mentor) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">

    <%= f.hidden_field :user %>
    <%= f.input :bio %>
    <%= f.input :accept_mentee, label: "Accepting new mentees?" %>
    <%= f.input :linkedIn %>
    <%= f.input :website %>
    <%= f.label :picture %>
    <%= f.file_field :picture, accept:'image/png,image/gif,image/jpeg,image/jpg' %>
    <p>In order to help prospective mentees find you, select the four of your strongest professional skills</p>
    <%= f.input :skills, collection: Skill::SKILLS, input_html: { multiple: true }%>
  </div>
    
  <div class="form-actions">
    <%= f.button :submit, class:'btn btn-primary' %>
  </div>
<% end %>

