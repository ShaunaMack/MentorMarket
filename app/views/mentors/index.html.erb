

<h1 class="row">Available Mentors</h1>
<div class="row">
  <div class="col-3 side-filter">
  
    <form action="<%= mentors_path %>" method="GET">
      <h5>Filter Mentors by Skill(s)</h5>

      <% @skills.each do |skill| %>
        <input id="filter_skill_<%= skill[1] %>" name="filter[skills][]" type="checkbox" value="<%= skill[1] %>" />
        <label for="filter_skill_<%= skill[1] %>"><%= skill[0] %></label><br />
      <% end %>
      <h5>Filter Mentors by Belief(s)</h5>

      <% @beliefs.each do |belief| %>
        <input id="filter_belief_<%= belief[1] %>" name="filter[beliefs][]" type="checkbox" value="<%= belief[1] %>" />
        <label for="filter_belief_<%= belief[1] %>"><%= belief[0] %></label><br />
      <% end %>
      <input type="submit" value="Filter Mentors" class="btn btn-primary" />
      <%= link_to "Reset Filter", mentors_path, class: "btn btn-secondary" %>
    </form>
  
  </div>
 
  <div class="card-columns col-9">
    <% @mentors.each do |mentor| %>
        <% if mentor.accept_mentee? %>
          <div class="card bg-dark text-white text-center">
            <img class="card-img" src="https://mdbootstrap.com/img/Photos/Horizontal/Work/4-col/img%20%2814%29.jpg" alt="computer image">
            <div class="card-img-overlay">
              <h3 class="card-title"><strong><%= mentor.user.get_name %></strong></h3>
              <p class= "card-text"><%= mentor.user.get_profile_field(:job_title) %></p>
              <p class= "card-text"><%= mentor.bio.truncate(40) %></p>
              <p>
                <a href="<%= mentor.linkedIn %>" class="px-2 fa-lg" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                <a href="<%= mentor.website %>" class="px-2 fa-lg" target="_blank"><i class="fas fa-laptop-code"></i></a>
              </p>
              <%= link_to 'See more', mentor, class:"btn btn-primary" %>
            </div>
            </div>
      <% end %>
    <% end %>
  </div>
</div>
