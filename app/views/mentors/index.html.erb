<p id="notice"><%= notice %></p>

<h1>Mentors</h1>

<table>
  <thead>
    <tr>
      <th>Bio</th>
      <th>Accept mentee</th>
      <th>Linkedin</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mentors.each do |mentor| %>
      <% if mentor.accept_mentee? %>
      <tr>
        <td><%= mentor.bio %></td>
        <td><%= mentor.accept_mentee %></td>
        <td><%= mentor.linkedIn %></td>
        <td><%= mentor.website %></td>
        <td><%= link_to 'Show', mentor %></td>
        <td></td>
        <td><%= link_to 'Destroy', mentor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mentor', new_mentor_path %>
